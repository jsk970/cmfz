		<mvc:interceptor>
			过滤所有的请求
			<mvc:mapping path="/**"/>
			<bean class="com.baizhi.cmfz.handlerinterceptor.CheckLogined"/>
		</mvc:interceptor>
	</mvc:interceptors> -->
	
</beans>

